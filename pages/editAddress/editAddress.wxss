page{
  background-color: #f2f8fe;
}
.form-list {
    position: relative;
    margin-bottom: 20rpx;
    margin-top: 20rpx;
    margin-left: 30rpx;
    margin-right: 30rpx;
    background-color: #fff;
    border-radius: 12rpx;
    padding: 0 20rpx;
}
.form-item {
  line-height: 100rpx;
  height: 100rpx;
  font-size: 28rpx;
  color: #333; 
  display: flex;
  width: 100%;
  border-bottom:1rpx dashed #eee;
}
.form-item1{
  font-size: 28rpx;
  color: #333; 
  display: flex;
  width: 100%;
  border-bottom:1rpx dashed #eee;
}
.form-list .form-item:last-child{
  border-bottom:0rpx dashed #eee;
}
.form-item-hd {
    width: 160rpx;
    line-height: 100rpx;
}
.setDefault .form-item-hd{
  width: 192rpx;
}
.form-item-bd {
    flex: 1;
}
.setDefault .form-item-bd{
  text-align: right;
}
input, .input {
    box-sizing: border-box;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 28rpx;
    padding: 0 15rpx;
}
textarea{
    box-sizing: border-box;
    width: 100%;
    line-height: 40rpx;
    font-size: 28rpx;
    padding: 0 15rpx;
}
.input-placeholder {
    color: #666;
}
.save-btn {
  width: 100%;
  height: 98rpx;
  font-size: 32rpx;
  text-align: center;
  line-height: 98rpx;
  background-color: #FF5A02;
  color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
}
.save-btn:active {
  background-color: #FF5A02;
}
.hidden {
    display:none;
}
.message {
    position: fixed;
    top: 80%;
    left: 50%;
    width: 400rpx;
    height: 80rpx;
    margin-left: -200rpx;
    background-color: rgba(0, 0, 0, .75);
    border-radius: 20px;
    text-align: center;
    line-height: 80rpx;
    color: #fff;
    opacity: 0;
}
.fade-in {
    animation: fadeIn .3s forwards;
}
@keyframes fadeIn {
  from {
    opacity: 0;
    -webkit-transform: translate3d(0, 100%, 0);
    transform: translate3d(0, 100%, 0);
  }
  to {
    opacity: 1;
    -webkit-transform: none;
    transform: none;
  }
}
.area-item {
    line-height: 40px;
    text-align: center;
}
.distpicker {
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 999;
    width: 100%;
    height: 560rpx;
    justify-content: center;
    flex-wrap: wrap;
    background-color: #fff;
}
.distpicker-btn {
    display: flex;
    justify-content: space-between;
    box-sizing: border-box;
    width: 100%;
    padding: 0 40rpx;
    height: 80rpx;
    line-height: 80rpx;
    background-color: #fafafa;
    color: #586C94;
}
.distpicker-content {
    box-sizing: border-box;
    width: 100%;
    height: 560rpx;
    background-color: #fff;
}
.mask {
    position: fixed;
    left: 0;
    top: 0;
    z-index: 998;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, .4);
}