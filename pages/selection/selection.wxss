page{
  background: #f2f8fe;
}
.index-nav{
  background-color: #fff;
  position: relative;
  font-size:26rpx;
  width: 100%;
}
.index-nav .dzjx_bg{
  width: 100%;
  height: 300rpx;
}
.shopkeeper{
  position: absolute;
  left:32rpx;
  top: 72rpx;
}
.shopkeeper .shoph{
  width: 156rpx;
  height: 156rpx;
}
.shopkeeper .shoph image{
  display:block; 
  overflow:hidden; 
  border-radius: 50%;
