/* pages/gift/gift.wxss */
@import "../../../../wxParse/wxParse.wxss";
page{
  background: #f2f8fe;
  font-size: 36rpx;
  color: #333;
}
.buy{
  margin-top: 22rpx;
  height: 80rpx;
  width: 690rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  background-color: #FF5A02;
  text-align: center;
  color: #fff;
  font-size: 32rpx;
  margin-left: 32rpx;
}
.blank{
  width: 100%;
  height: 300rpx;
  background-color: #f2f8fe;
}
.banner{
  padding: 0;
  margin: 0;
  width: 100%;
  height: 350rpx;
}
.banner image{
  padding: 0;
  margin: 0;
  width: 100%;
  height: 100%;
}
.active{
  display: none;
}
scroll-view{
  width:100%;
  margin-top: 32rpx;
}
.hei{
  height: 814rpx;
}
.title{ 
  width: 750rpx;
  margin-top: 20rpx;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  padding-bottom: 20rpx;
   background-color: #f2f8fe;
}
.bgc{
  background-color: #fff;
  padding: 22rpx 0;
  width: 690rpx;
  margin-left: 30rpx;
  border-radius: 12rpx;
  margin-top: 22rpx;
}
.name{
  width: 468rpx;
  height: 50rpx;
  line-height: 50rpx;
  margin-left: 32rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.last{
  width: 626rpx;
  margin-left: 32rpx;
  margin-top: 14rpx;
  overflow: hidden;
  position: relative;
}
.price{
  height: 50rpx;
  line-height: 50rpx;
  color: #C40000;
}
.person{
  font-size: 32rpx;
  color:#666;
  height: 44rpx;
  line-height: 44rpx;
  position: absolute;
  bottom: 0;
  right: 0; 
  width: 350rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  text-align: right;
} 